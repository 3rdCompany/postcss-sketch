{
  "name": "postcss-sketch",
  "version": "0.1.9",
  "description": "PostCSS plugin that provides deep bindings between sketch files and your CSS.",
  "main": "lib/index.js",
  "repository": "jturle/postcss-sketch",
  "author": "James Turle <james@3rdcompany.com>",
  "license": "MIT",
  "scripts": {
    "precommit": "lint-staged",
    "build": "babel -d lib/ src/",
    "build:watch": "babel -w -d lib/ src/",
    "test": "jest && eslint src/*.js",
    "test:coverage": "jest --coverage",
    "dev": "webpack-dev-server --hot --watch",
    "dev:test": "postcss test/test.css",
    "dev:test:menu": "postcss test/components/menu.css",
    "dev:test:watch": "postcss test/test.css -o ./test/output.css -w"
  },
  "bugs": {
    "url": "https://github.com/jturle/postcss-sketch/issues"
  },
  "homepage": "https://github.com/jturle/postcss-sketch",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "sketch",
    "sketchapp",
    "postcss-sketch"
  ],
  "dependencies": {
    "lodash": "^4.17.4",
    "path": "^0.12.7",
    "postcss": "^6.0.1",
    "postcss-nesting": "^4.0.1",
    "postcss-value-parser": "^3.3.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-1": "^6.24.1",
    "css-loader": "^0.28.4",
    "eslint": "^3.19.0",
    "eslint-config-postcss": "^2.0.2",
    "file-loader": "^0.11.2",
    "husky": "^0.13.4",
    "jest": "^20.0.0",
    "lint-staged": "^4.0.0",
    "md5": "^2.2.1",
    "null-loader": "^0.1.1",
    "postcss-calc": "^6.0.0",
    "postcss-cli": "^4.1.0",
    "postcss-custom-properties": "^6.0.1",
    "postcss-flexbugs-fixes": "^3.0.0",
    "postcss-loader": "^2.0.5",
    "postcss-selector-parser": "^2.2.3",
    "prettier": "^1.4.4",
    "react": "^15.6.0",
    "react-dom": "^15.6.0",
    "react-transform-hmr": "^1.0.4",
    "semantic-ui-css": "^2.2.10",
    "semantic-ui-react": "^0.68.5",
    "style-loader": "^0.18.2",
    "url-loader": "^0.5.9",
    "watch": "^1.0.2",
    "watchfile-webpack-plugin": "^0.0.4",
    "webpack": "^2.6.1",
    "webpack-dev-server": "2",
    "webpack-hot-middleware": "^2.18.0"
  },
  "peerDependencies": {
    "postcss-nesting": "^4.0.1"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-1",
      "react"
    ],
    "env": {
      "development": {
        "plugins": [
          [
            "react-transform",
            {
              "transforms": [
                {
                  "transform": "react-transform-hmr",
                  "imports": [
                    "react"
                  ],
                  "locals": [
                    "module"
                  ]
                }
              ]
            }
          ]
        ]
      }
    }
  },
  "lint-staged": {
    "*.js": [
      "./node_modules/.bin/prettier --tab-width 4 --single-quote --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": "eslint-config-postcss",
    "env": {
      "jest": true
    }
  }
}
